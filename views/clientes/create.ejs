<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Cliente</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
    /* Contêiner principal do formulário */
    .form-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
    }

    /* Agrupamento dos campos do formulário */
    .form-group {
        margin-bottom: 25px;
    }

    /* Estilo das etiquetas dos campos */
    .form-group label {
        font-weight: bold;
        color: #333;
        font-size: 1.1rem;
        margin-bottom: 8px;
        display: block;
    }

    /* Estilo dos campos de entrada */
    .form-group input[type="text"], 
    .form-group input[type="email"], 
    .form-group input[type="tel"], 
    .form-group input[type="number"], 
    .form-group textarea {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-sizing: border-box;
        margin-top: 8px;
        background-color: #f9f9f9;
    }

    .form-group input[type="text"]:focus, 
    .form-group input[type="email"]:focus, 
    .form-group input[type="tel"]:focus, 
    .form-group input[type="number"]:focus, 
    .form-group textarea:focus {
        border-color: #0259b7;
        outline: none;
    }

    /* Estilo do botão de envio */
    button[type="submit"] {
        background-color: #0259b7;
        color: white;
        border: none;
        padding: 14px 20px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #023c8c;
    }

    /* Estilo para o formulário em dispositivos móveis */
    @media (max-width: 600px) {
        .form-container {
            padding: 20px;
        }

        .form-group label {
            font-size: 1rem;
        }

        button[type="submit"] {
            font-size: 1.1rem;
        }
    }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Criar Novo Cliente</h1>
        <form action="/clientes" method="POST">
            <!-- Campo para o Nome -->
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" name="nome" required>
            </div>

            <!-- Campo para o Email -->
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" name="email" required>
            </div>

            <!-- Campo para o Telefone -->
            <div class="form-group">
                <label for="telefone">Telefone:</label>
                <input type="text" class="form-control" name="telefone" required>
            </div>

            <!-- Campo para o Endereço -->
            <div class="form-group">
                <label for="endereco">Endereço:</label>
                <input type="text" class="form-control" name="endereco" required>
            </div>

            <!-- Campo para o CPF -->
            <div class="form-group">
                <label for="cpf">CPF:</label>
                <input type="text" class="form-control" name="cpf" required>
            </div>

            <!-- Campo para a Dívida -->
            <div class="form-group">
                <label for="divida">Dívida:</label>
                <input type="number" class="form-control" name="divida" required>
            </div>

            <!-- Botão de envio -->
            <button type="submit">Criar Cliente</button>
        </form>
    </div>
</body>
</html>
