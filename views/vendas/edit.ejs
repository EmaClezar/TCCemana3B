<h1>Editar Venda</h1>
<form action="/vendas/<%= venda.id %>?_method=PUT" method="POST"> <!-- Corrigido para 'venda.id' -->
    <div class="form-group">
        <label for="data_vendas">Data da Venda</label>
        <input type="date" class="form-control" id="data_vendas" name="data_vendas" value="<%= venda.data_vendas %>" required> <!-- Corrigido para 'venda.data_vendas' -->
    </div>
    <div class="form-group">
        <label for="valor_total">Valor Total</label>
        <input type="number" step="0.01" class="form-control" id="valor_total" name="valor_total" value="<%= venda.valor_total %>" required> <!-- Corrigido para 'venda.valor_total' -->
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
