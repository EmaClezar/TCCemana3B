<h1>Editar vendas</h1>
<form action="/vendas/<%= vendas.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="data">Data da vendas</label>
        <input type="date" class="form-control" id="data" name="data" value="<%= vendas.data %>" required>
    </div>
    <div class="form-group">
        <label for="valor">Valor Total</label>
        <input type="number" step="0.01" class="form-control" id="valor" name="valor" value="<%= vendas.valor %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
