<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Novo Produto</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        /* Estilo do Formulário */

        .navbar {
            background-color: #0259b7; /* Azul Escuro */
            padding: 1rem 2rem;
            border-bottom: 3px solid #004085; /* Sombra de destaque */
        }

        .navbar-brand {
            color: white;
            font-size: 1.8rem;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .navbar-brand img {
            height: 50px;
            margin-right: 15px;
        }

        .navbar-nav .nav-link {
            color: white;
            font-size: 1.1rem;
            margin-left: 20px;
            transition: color 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: #cce5ff; /* Azul claro ao passar o mouse */
        }

        .navbar-nav .dropdown-menu {
            background-color: #0056b3; /* Azul mais escuro */
            border: none;
        }
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 20px 30px rgba(0, 0, 0, 0.1); /* Sombras mais intensas */
            background-color: #f8f9fa;
            border-top: 1px solid #0259b7; /* Borda superior azul */
            position: relative;
        }

        .form-container h1 {
            color: #0259b7;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            font-weight: bold;
        }

        .form-group label {
            font-size: 1.1rem;
            color: #495057;
            font-weight: 600;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 12px 15px;
            font-size: 1.1rem;
            transition: border 0.3s, box-shadow 0.3s;
        }

        .form-control:focus {
            border-color: #0259b7;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        button[type="submit"] {
            background-color: #0259b7;
            color: #fff;
            border: none;
            padding: 12px 20px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s, transform 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #004085;
            transform: translateY(-2px);
        }

        button[type="submit"]:active {
            transform: translateY(2px);
        }

        /* Detalhes adicionais na caixa */
        .form-container::before {
            content: "";
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            border-radius: 15px;
            border: 3px solid #0259b7;
            z-index: -1; /* Coloca atrás do conteúdo */
        }
    </style>
</head>
<body>

    <!-- Formulário de Cadastro de Produto -->
    <div class="form-container">
        <h1>Cadastrar Novo Produto</h1>
        <form action="/produto" method="POST">
            <!-- Campo Nome -->
            <div class="form-group">
                <label for="nome">Nome do produto:</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o nome do produto" required>
            </div>

            <!-- Campo Descrição -->
            <div class="form-group">
                <label for="descricao">Descrição:</label>
                <textarea id="descricao" class="form-control" name="descricao" placeholder="Descreva brevemente o produto" maxlength="500" rows="3" required></textarea>
            </div>

            <!-- Campo Preço -->
            <div class="form-group">
                <label for="preco">Preço:</label>
                <input type="number" class="form-control" id="preco" name="preco" placeholder="0.00" min="0" step="0.01" required>
            </div>

            <!-- Campo Quantidade -->
            <div class="form-group">
                <label for="quantidade">Quantidade:</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" placeholder="1" min="1" required>
            </div>

            <!-- Campo Categoria -->
            <div class="form-group">
                <label for="categoria">Categoria:</label>
                <select class="form-control" id="categoria" name="categoria" required>
                    <option value="" disabled selected>Selecione uma categoria</option>
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria.id %>"><%= categoria.nome %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Botão de Cadastro (com margem reduzida) -->
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
            </div>
        </form>
    </div>

</body>
</html>
