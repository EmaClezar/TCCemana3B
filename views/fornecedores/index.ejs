<h1>Lista de fornecedores</h1>
<table class="table">
    <thead>

        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Cpf_Cnpj</th>
            <th>Número</th>
            <th>Endereço</th>

        </tr>
    </thead>
    <tbody>
        <% fornecedores.forEach(fornecedores => { %>
            <tr>
                <td><%= fornecedores.id %></td>
                <td><%= fornecedores.nome %></td>
                <td><%= fornecedores.email %></td>
                <td><%= fornecedores.cpf_cnpj %></td>
                <td><%= fornecedores.telefone %></td>
                <td><%= fornecedores.endereco %></td>
                <td>
                    <a href="/fornecedores/<%= fornecedores.id %>" class="btn btn-primary">Vizualizar</a>
                    <a href="/fornecedores/<%= fornecedores.id %>/edit" class="btn btn-warning">Editar</a>
                    <form action="/fornecedores/<%= fornecedores.id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
